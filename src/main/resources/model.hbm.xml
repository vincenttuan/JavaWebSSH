<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="orm.model.Book" table="book">
        <id name="id" type="int" column="b_id">
            <generator class="native"/>
        </id>
        <property name="name" column="b_name" type="string"/>
        <property name="price" column="b_price" type="int"/>
    </class>
</hibernate-mapping>
